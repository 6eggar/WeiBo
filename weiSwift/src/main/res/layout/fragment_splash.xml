<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_activity_bg" />

    <LinearLayout
        android:id="@+id/login_container_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/login_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/login_hint"
            android:textColor="#e2c3d7"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_sso_auth_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:drawableLeft="@drawable/weibo_icon"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/login_sso_auth_text"
                android:textColor="#666666"
                android:textSize="13sp"
                android:theme="@style/LoginButton" />

            <Button
                android:id="@+id/login_web_auth_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/weibo_icon"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/login_web_auth_text"
                android:textColor="#666666"
                android:textSize="13sp"
                android:theme="@style/LoginButton" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>